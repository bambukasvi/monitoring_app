<form method="POST" action="/behavior/reporting/evening">
    <% if (success) { %>
        <%- include('./success.ejs') %>
    <% } %>

    <%- include('./error.ejs', {errors: errors, attribute: 'date'}) %>
    <label for="eveningDate">Date</label>
    <input id="eveningDate" type="date" name="date" value="<%= date %>"/>

    <%- include('./error.ejs', {errors: errors, attribute: 'sportsTime'}) %>
    <label for="sportsTime">Time on sports and exercising</label>
    <input id="sportsTime" type="number" name="sportsTime" value="<%= sportsTime %>"/>

    <%- include('./error.ejs', {errors: errors, attribute: 'studyTime'}) %>
    <label for="studyingTime">Time on studying</label>
    <input id="studyingTime" type="number" name="studyTime" value="<%= studyTime %>"/>

    <%- include('./error.ejs', {errors: errors, attribute: 'eatingQuality'}) %>
    <label for="eatingQuality">Eating quality</label>
    <input id="eatingQuality" type="range" name="eatingQuality" min="1" max="5" value="<%= eatingQuality %>"/>

    <%- include('./error.ejs', {errors: errors, attribute: 'mood'}) %>
    <label for="eveningMood">Mood</label>
    <input id="eveningMood" type="range" name="mood" min="1" max="5" value="<%= mood %>"/>

    <input style='display: block' type="submit" value="Submit"/>
</form>